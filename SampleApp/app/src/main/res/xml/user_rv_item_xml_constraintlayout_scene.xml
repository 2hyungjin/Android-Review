<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
       <KeyFrameSet>
       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">

        <Constraint
            android:layout_height="200dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="50dp"
            android:id="@+id/img_user_rv_item" />
        <Constraint
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/tv_id_user_rv_item"
            motion:layout_constraintBottom_toBottomOf="@+id/img_user_rv_item"
            motion:layout_constraintTop_toBottomOf="@+id/img_user_rv_item"
            motion:layout_constraintEnd_toEndOf="@+id/img_user_rv_item"
            motion:layout_constraintStart_toStartOf="@+id/img_user_rv_item"
            motion:layout_constraintStart_toEndOf="@+id/img_user_rv_item" />
        <Constraint
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="@+id/img_user_rv_item"
            android:id="@+id/tv_id_user_rv_item"
            motion:layout_constraintEnd_toEndOf="@+id/img_user_rv_item"
            motion:layout_constraintStart_toStartOf="@+id/img_user_rv_item"
            motion:layout_constraintStart_toEndOf="@+id/img_user_rv_item"
            motion:layout_constraintTop_toBottomOf="@+id/img_user_rv_item" />
        <Constraint
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/img_user_rv_item"
            android:id="@+id/tv_following_user_rv_item"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
    </ConstraintSet>
</MotionScene>